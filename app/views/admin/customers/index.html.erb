<div class="container px-5 px-sm-0">
  <div class="row" style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>会員一覧</h4>
    </div>
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <table class="table table-hover">
      <thead class="table-active">
        <tr>
          <th>会員ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.name, admin_customer_path(customer), class: "text-dark font-weight-bold" %></td>
          <td><%= customer.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
    </div>
  </div>
</div>