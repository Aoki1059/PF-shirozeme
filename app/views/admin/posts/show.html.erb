<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
  		<h2 class="post">見どころ</h2>
  		<div>
  		  <p><%= image_tag @post.get_image, size:"700x400" %></p>
  		</div>
  		<table class="table">
  		  <tr>
  		    <td>会員名: <%= @post.customer.name %></td>
          <td>城名: <%= @post.castle %></td>
          <td><%= link_to "削除する", admin_post_path(@post.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger rounded-pill"%></td>
        </tr>
      </table>
      <div class="body h5 col-xs-4" style="word-wrap: break-word; width: 725px;">
        感想 : <br>
        <%= @post.body %>
      </div>
    </div>
  </div>
</div>
