<div class="container" style="margin-top: 160px; margin-bottom: 200px;">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="edit">会員情報編集</h2>
    <%= form_with model:@customer, local:true do |f| %>
      <%= render "layouts/errors", obj: @customer %>
      <div class="form-group">
        <%= f.label :"プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :"会員名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-secondary rounded-pill" %>
      </div>
    <% end %>
  </div>
</div>