<div class="container px-5 px-sm-0">
  <div class="row" style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>ブックマーク一覧</h2>
    </div>
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <table class="table table-hover">
      <thead class="table-active">
        <tr>
          <th>投稿者名</th>
          <th>城名</th>
          <th>見どころ</th>
        </tr>
      </thead>
      <tbody>
        <% @bookmarks.each do |bookmark| %>
          <tr>
            <td><%= bookmark.post.customer.name %></td>
            <td>
              <%= link_to post_path(bookmark.post) do %>
                <%= bookmark.post.castle %>
              <% end %>
            </td>
            <td class="text-truncate" style="max-width: 150px;"><%= bookmark.post.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @bookmarks %>
  </div>
</div>