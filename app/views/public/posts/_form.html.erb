<%= form_with model: @post,local:true do |f| %>
  <%= f.file_field :image, accept: "image/*", class: "w-100 mt-5" %>
  <div class="form-group mt-3">
    <%= f.label :castle, "城名" %>
    <%= f.text_field :castle, class: "form-control", placeholder:"例：丸岡城" %>
  </div>

  <div class="form-group pt-3">
    <%= f.label :body, "見どころ" %>
    <%= f.text_area :body, class: "form-control", placeholder:"ここにコメント" %>
  </div>

  <div class="notification pt-3">
    <%= f.label :is_published_flag, "公開", value: true %>
    <%= f.radio_button :is_published_flag, "true" %> |
    <%= f.label :is_published_flag, "非公開", value: false %>
    <%= f.radio_button :is_published_flag,"false" %>
  </div>
  <div class="form-group pt-4">
    <%= f.submit "投稿する", class: "btn btn-success rounded-pill" %>
  </div>
<% end %>
