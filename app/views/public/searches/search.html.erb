<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <% if @range == "会員名" %>
        <h2>"<%= @text %>"の検索結果</h2>
        <%= render "public/customers/index",customers: @customers %>
        <%= paginate @customers %>
      <% else %>
        <h2>"<%= @text %>"の検索結果</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>城名</th>
              <th>感想</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td class="text-center"><%= image_tag post.image, size: "100x100" %></td>
                <td class="pt-5"><%= link_to post.castle,post %></td>
                <td class="pt-5 text-truncate" style="max-width: 400px;"><%= post.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @posts %>
      <% end %>
    </div>
  </div>
</div>