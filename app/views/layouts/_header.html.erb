<header class="bg-secondary text-monospace">
  <nav class="navbar navbar-expand-lg navbar-dark p-0">
    <div class="container ">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="nav navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li>
              <%= link_to "投稿一覧", admin_posts_path, class: "nav-link text-light" %>
            </li>
            <li >
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link text-light" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-light" %>
            </li>
            <li class="nav-link">
              <%= render "admin/searches/search" %>
            </li>
          <% elsif customer_signed_in? %>
            <li>
              <%= link_to "マイページ", customer_path(current_customer), class: "nav-link text-light" %>
            </li>
            <li>
              <%= link_to "会員一覧", customers_path, class: "nav-link text-light" %>
            </li>
            <li>
              <%= link_to "投稿＆一覧", posts_path, class: "nav-link text-light" %>
            </li>
            <li class="notification"><%= link_to "通知", notifications_path, class: "nav-link text-light" %></li>
            <% if unchecked_notifications.any? %>
              <i class="fa fa-circle notification-circle pr-2"></i>
            <% end %>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link text-light" %>
            </li>
            <li class="nav-link">
              <%= render "public/searches/search" %>
            </li>
          <% else %>
            <div class="nav collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to "ホーム", root_path, class: "nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path, data: {"turbolinks" => false}, class: "nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-light" %>
                </li>
              </ul>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>